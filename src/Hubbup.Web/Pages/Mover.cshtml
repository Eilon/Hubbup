@page
@using Microsoft.AspNetCore.Authentication
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostingEnvironment
@{
    ViewData["PageTitlePrefix"] = $"Issue Mover";
    ViewData["CurrentGroup"] = "Mover";
}

@*<base href="/Mover/" />*@

<app>@(await Html.RenderComponentAsync<IssueMoverClient.Pages.IssueMover>())</app>

<script src="_framework/blazor.server.js"></script>

<script>

    @{ 
        var accessToken = await HttpContext.GetTokenAsync("access_token");
    }

    window.GitHubAccessToken = function () {
        return @Json.Serialize(accessToken);
    };

    window.updateTooltips = function (elem) {
        $(elem).tooltip();
    };
</script>
